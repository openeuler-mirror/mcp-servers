{
    "mcpServers": {
        "proxy_manager_mcp": {
            "command": "uv",
            "args": [
                "--directory",
                "/opt/mcp-servers/servers/proxy_manager_mcp/src",
                "run",
                "server.py"
            ],
            "disabled": false,
            "alwaysAllow": [
                "set_proxy",
                "get_proxy_status", 
                "restart_proxy",
                "list_proxy_settings"
            ]
        }
    }
}