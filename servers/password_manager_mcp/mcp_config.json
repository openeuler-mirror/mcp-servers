{
    "mcpServers": {
        "password_manager_mcp": {
            "command": "uv",
            "args": [
                "--directory",
                "/opt/mcp-servers/servers/password_manager_mcp/src",
                "run",
                "server.py"
            ],
            "disabled": false,
            "alwaysAllow": [
                "list_passwords",
                "get_password",
                "store_password"
            ]
        }
    }
}