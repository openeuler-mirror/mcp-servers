{
  "mcpServers": {
    "kernel_driver_manager_mcp": {
      "command": "python3",
      "args": [
        "/opt/mcp-servers/servers/kernel_driver_manager_mcp/src/server.py",
        "--kernel_modules_path=/lib/modules",
        "--driver_db_path=/var/lib/dkms",
        "--log_level=info",
        "--max_workers=4"
      ],
      "disabled": false
